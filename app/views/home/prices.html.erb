<section /id="info">
  <div class="row" id="row2">
		<div class="row" id="row3">
				 <div class="card">
        <%  if @symbol %>
         <% if @quote["Response"] %>
            <h4>That 404 Symbol <%= @symbol %> Doesn't Exist. Error! Plase Try Again...</h4>
            <% else %>
            <% @quote["DISPLAY"].each do |key, value|  %>

				 	   <h2><%= key %> </h2>
					   <p><%= value["USD"]["PRICE"] %></p>
					 <p>24hr High:  <%= value["USD"]["HIGHDAY"] %></p>
					   <p>24hr Low:   <%= value["USD"]["LOWDAY"] %></p>
             <p>Market Cap: <%= value["USD"]["MKTCAP"] %></p>
          <% end %>
        <% end %>
      <% else %>
        <h4>Plase Enter a Crypto symbol in the form above...</h4>
      <% end %>
				</div>
			</div>
   </div>
</section>

